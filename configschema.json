{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "obs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": "ws://localhost:4455"
        },
        "password": {
          "type": "string",
          "default": ""
        },
        "names": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "scenes": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "gameLayout": {
                  "type": "string",
                  "default": "Game Layout"
                }
              },
              "required": [
                "gameLayout"
              ]
            },
            "captures": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "games": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "uniqueItems": true,
                  "minItems": 1,
                  "default": [
                    "Game Capture 1",
                    "Game Capture 2"
                  ]
                },
                "camera": {
                  "type": "string",
                  "default": "Camera Capture"
                }
              },
              "required": [
                "games",
                "camera"
              ]
            }
          },
          "required": [
            "scenes",
            "captures"
          ]
        }
      },
      "required": [
        "enabled",
        "url",
        "password",
        "names"
      ]
    },
    "foobar2000": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": "http://localhost:8880/api"
        },
        "username": {
          "type": "string",
          "default": ""
        },
        "password": {
          "type": "string",
          "default": ""
        }
      },
      "required": [
        "enabled",
        "url",
        "username",
        "password"
      ]
    },
    "xr18": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "ip": {
          "type": "string",
          "default": ""
        },
        "fadeLength": {
          "type": "number",
          "default": 1000
        },
        "faders": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "player": {
              "type": "string",
              "default": "/dca/1/fader"
            },
            "reader": {
              "type": "string",
              "default": "/dca/2/fader"
            },
            "game": {
              "type": "string",
              "default": "/dca/3/fader"
            }
          },
          "required": [
            "player",
            "reader",
            "game"
          ]
        }
      },
      "required": [
        "enabled",
        "ip",
        "fadeLength",
        "faders"
      ]
    },
    "tracker": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "useTestData": {
          "type": "boolean",
          "default": false
        },
        "url": {
          "type": "string",
          "default": "https://tracker.example.com"
        },
        "eventShort": {
          "type": "string",
          "default": "event_short"
        },
        "currencySymbol": {
          "type": "string",
          "default": "Â£"
        }
      },
      "required": [
        "enabled",
        "useTestData",
        "url",
        "eventShort",
        "currencySymbol"
      ]
    }
  },
  "required": [
    "obs",
    "foobar2000",
    "xr18",
    "tracker"
  ]
}
